# zabbix-network
networks:
  zbx_net_frontend:
    driver: bridge
    driver_opts:
      com.docker.network.enable_ipv6: "false"
    ipam:
      driver: default
      config:
      - subnet: {{ zbx_net_frontend_subnet }}

  zbx_net_backend:
    driver: bridge
    driver_opts:
      com.docker.network.enable_ipv6: "false"
    internal: true
    ipam:
      driver: default
      config:
      - subnet: {{ zbx_net_backend_subnet }}

# zabbix-secrets
secrets:
  MYSQL_USER:
    file: "{{ zbx_variables_local_path }}/.MYSQL_USER"
  MYSQL_PASSWORD:
    file: "{{ zbx_variables_local_path }}/.MYSQL_PASSWORD"
  MYSQL_ROOT_USER:
    file: "{{ zbx_variables_local_path }}/.MYSQL_ROOT_USER"
  MYSQL_ROOT_PASSWORD:
    file: "{{ zbx_variables_local_path }}/.MYSQL_ROOT_PASSWORD"
